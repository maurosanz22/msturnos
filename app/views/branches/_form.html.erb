<%= form_for(branch) do |f| %>
  <% if branch.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% branch.errors.full_messages.each do |message| %>
          <li class="form-error"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nombre %>
    <%= f.text_field :nombre, class:"form-control", placeholder:"Nombre sucursal" %>
  </div>

  <div class="form-group">
    <%= f.label :direccion %>
    <%= f.text_field :direccion, class:"form-control", placeholder:"Direccion" %>
  </div>

  <div class="form-group">
    <%= f.label :telefono %>
    <%= f.text_field :telefono, class:"form-control", placeholder:"Telefono" %>
  </div>

  <div class="actions">
    <%= render "partials/saveAndCancelBttn", form: f,cancel_path: branches_path %>
  </div>
<% end %>
