<h2>Bienvenido <span class="strong"><%= current_user.email %></span></h2>
<br>
<br>
<div class="container">
  <div class="col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        Mis turnos para hoy
      </div>
      <div class="panel-body">
        <table class="table">
          <thead>
            <tr>
              <th>Empresa</th>
              <th>Sucursal</th>
              <th>Actividad</th>
              <th>Fecha</th>
              <th>Inicio</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @current_shifts.each do |shift| %>
              <tr>
                <td><%= shift.activity.branch.company.razon_social %></td>
                <td><%= shift.activity.branch.nombre %></td>
                <td><%= shift.activity.Nombre %></td>
                <td><%= shift.fecha.strftime("%d/%m/%Y")%></td>
                <td><%= shift.hora_inicio.strftime("%H:%M hs")%></td>
                <td>
                  <%= link_to delete_shift_path(shift.id), method: :delete, data: { confirm: 'Usted esta seguro?' }, :class =>"btn btn-danger btn-xs" do %>
	                  <span class="glyphicon glyphicon-trash"></span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="panel panel-success">
      <div class="panel-heading">
        Turnos futuros
      </div>
      <div class="panel-body">
        <table class="table">
          <thead>
            <tr>
              <th>Empresa</th>
              <th>Sucursal</th>
              <th>Actividad</th>
              <th>Fecha</th>
              <th>Inicio</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @future_shifts.each do |shift| %>
              <tr>
                <td><%= shift.activity.branch.company.razon_social %></td>
                <td><%= shift.activity.branch.nombre %></td>
                <td><%= shift.activity.Nombre %></td>
                <td><%= shift.fecha.strftime("%d/%m/%Y")%></td>
                <td><%= shift.hora_inicio.strftime("%H:%M hs")%></td>
                <td>
                  <%= link_to delete_shift_path(shift.id), method: :delete, data: { confirm: 'Usted esta seguro?' }, :class =>"btn btn-danger btn-xs" do %>
	                  <span class="glyphicon glyphicon-trash"></span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="panel panel-warning">
      <div class="panel-heading">
        Turnos pasados
      </div>
      <div class="panel-body">
        <table class="table">
          <thead>
            <tr>
              <th>Empresa</th>
              <th>Sucursal</th>
              <th>Actividad</th>
              <th>Fecha</th>
              <th>Inicio</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @pass_shifts.each do |shift| %>
              <tr>
                <td><%= shift.activity.branch.company.razon_social %></td>
                <td><%= shift.activity.branch.nombre %></td>
                <td><%= shift.activity.Nombre %></td>
                <td><%= shift.fecha.strftime("%d/%m/%Y")%></td>
                <td><%= shift.hora_inicio.strftime("%H:%M hs")%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  
  <div class="col-md-6">
    <div class="panel panel-info">
      <div class="panel-heading">
        Empresas
      </div>
      <div class="panel-body">
        <table class="table">
          <thead>
            <tr>
              <th>Nombre</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @companies.each do |company| %>
              <tr>
                <td><%= company.razon_social %></td>
                <td>
                  <%= link_to "...", search_shifts_path(company.id, 'false'), :class =>"btn btn-primary btn-xs" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>        
      </div>
    </div>    
  </div>
</div>