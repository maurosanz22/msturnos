<h1>Buscar empresa</h1>
<%= form_tag search_company_path, :method=>'get' do %>
  <div class="row">
    <div class="form-group col-xs-4">
      <%= text_field_tag :nombre, nil, placeholder: 'Buscar por nombre de la empresa', class:"form-control" %>
    </div>
    <div class="form-group col-xs-4">
      <%= select_tag :area_id, options_from_collection_for_select(@areas,"id", "nombre", params[:area_id]), prompt: "Buscar por rubro", class:"form-control"%>
    </div>
    <div class="form-group col-xs-2">
        <%= button_tag(type: "submit", class: "btn btn-info") do %>
            <span class="glyphicon glyphicon-search"></span>
        <% end %>
    </div>
  </div>    
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Rubro</th>      
      <th>Tareas</th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.razon_social %></td>
        <td><%= company.nombre_rubro %></td>        
        <td>
          <%= link_to "Seguir", follow_company_path(company.id), method: :get, data: { confirm: 'Are you sure?' }, :class =>"btn btn-primary btn-xs" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>