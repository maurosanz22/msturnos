<%= form_tag management_shifts_path, :method=>'get' do |f| %>
  <div class="row">
    <div class="form-group col-xs-4">
      <%= select_tag :branch_id, options_from_collection_for_select(@branches, "id", "nombre", params[:branch_id]) ,prompt: "Seleccionar sucursal", class:"form-control", id: "activity_branch_id"%>
    </div>
    <div class="form-group col-xs-4">
      <%= select_tag :activity_id, option_groups_from_collection_for_select(@branch, :activities, :nombre, :id, :Nombre, params[:activity_id]), prompt: "Seleccionar actividad", class:"form-control"%>
    </div>
    
  </div>

  <div class="row">
    <div class="form-group col-xs-4">
      <div class="row">
        <div class='col-sm-12'>
          <div class="form-group">
            <div class='input-group date' id='datetimepicker1'>
              <%= text_field_tag :since, params[:since], class:"form-control", placeholder:"Fecha desde" %>
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
              </span>
            </div>
          </div>
        </div>
        <script type="text/javascript">
          $(function () {
              $('#datetimepicker1').datetimepicker({format: 'DD/MM/YYYY'});
          });
        </script>
      </div>
    </div>
    <div class="form-group col-xs-4">
      <div class="row">
        <div class='col-sm-12'>
          <div class="form-group">
            <div class='input-group date' id='datetimepicker2'>
              <%= text_field_tag :until, params[:until], class:"form-control", placeholder:"Fecha hasta" %>
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
              </span>
            </div>
          </div>
        </div>
        <script type="text/javascript">
          $(function () {
              $('#datetimepicker2').datetimepicker({format: 'DD/MM/YYYY'});
          });
        </script>
      </div>
    </div>
    <div class="form-group col-xs-2">
      <%= button_tag(type: "submit", name:"submit_button", class: "btn btn-info", id: "submit_button") do %>
        <span class="glyphicon glyphicon-search"></span>
      <% end %>
    </div>
    
  </div>
<% end %>

