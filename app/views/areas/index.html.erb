<h1>Rubros <%= link_to 'Nuevo', new_area_path, :class =>"btn btn-success" %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.codigo %></td>
        <td><%= area.nombre %></td>
        <td>
            <%= render "partials/editBttn", url_path: edit_area_path(area) %>
            <%= render "partials/deleteBttn", url_path: area %>
        <?td>
      </tr>
    <% end %>
  </tbody>
</table>