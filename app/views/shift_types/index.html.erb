<%= render "partials/titleAndNewBttn", title: "Tipos de turnos", url_path: new_shift_type_path %>

<table class="table">
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @shift_types.each do |shift_type| %>
      <tr>
        <td><%= shift_type.codigo %></td>
        <td><%= shift_type.nombre %></td>
        <td>
          <%= render "partials/editBttn", url_path: edit_shift_type_path(shift_type) %>
          <%= render "partials/deleteBttn", url_path: shift_type %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>