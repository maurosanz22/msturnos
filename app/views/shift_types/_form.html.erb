<%= form_for(shift_type) do |f| %>
  <% if shift_type.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% shift_type.errors.full_messages.each do |message| %>
        <li class="form-error"><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :codigo %>
    <%= f.text_field :codigo, class:"form-control", placeholder:"Codigo" %>
  </div>

  <div class="form-group">
    <%= f.label :nombre %>
    <%= f.text_field :nombre, class:"form-control", placeholder:"Nombre" %>
  </div>

  <div class="actions">
    <%= render "partials/saveAndCancelBttn", form: f, cancel_path: shift_types_path %>
  </div>
<% end %>
